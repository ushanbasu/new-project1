node
{
def mavenHome = tool name: "maven 3.8.4"
stage ('github pulling')
{
git branch: 'main', url: 'https://github.com/ushanbasu/new-project1.git'
}
stage ('build')
{
sh "${mavenHome}/bin/mvn clean package"
}
stage ('sonarqube')
{
sh "${mavenHome}/bin/mvn clean sonar:sonar"
}
stage ('nexus')
{
sh "${mavenHome}/bin/mvn clean sonar:sonar deploy"
}
stage ('tomcat deploy')
{
sshagent(['2723e9a4-c584-4c90-a3bc-8f2318020da6']) 
{
  sh "scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@15.206.117.228:/opt/apache-tomcat-9.0.56/webapps"  
}
}
}
